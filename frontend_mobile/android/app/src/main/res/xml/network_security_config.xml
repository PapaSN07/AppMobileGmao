<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- ✅ DÉVELOPPEMENT : Autoriser HTTP en clair (à retirer en production) -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>
    
    <!-- ✅ PRODUCTION : Configuration pour domtec.senelec.sn -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">domtec.senelec.sn</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>
    
    <!-- ✅ Pour IP locales en dev (192.168.x.x) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">192.168.1.10</domain>
        <domain includeSubdomains="true">localhost</domain>
    </domain-config>
</network-security-config>